    <Grid  Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource= "Images/vnsbg.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="164" />
            <RowDefinition Height="604*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="12,17,12,47" Name="TitlePanel">
           
            <TextBlock x:Name="ApplicationTitle" FontFamily="Segoe WP" Foreground="#EFA52E" Style="{StaticResource PhoneTextNormalStyle}" FontSize="55.65"  AllowDrop="False" Margin="24,0,24,673" Grid.RowSpan="2" >varanasi<Bold>travels</Bold></TextBlock>
        
        </StackPanel>
        
        <Button Content="Varanasi Point Of Interest" Height="80" HorizontalAlignment="Center" Margin="12,10,12,633" Name="button2"  Width="300" Background="#FFB76844" BorderBrush="#FF453731" Foreground="Black" Click="button2_Click" FontSize="20" />
        <Button FontFamily="Segoe WP" Click="button5_Click" Content="Cultural" Foreground="#FFEFA52E" Height="164" HorizontalAlignment="Right" Margin="0,23,234,0" Name="button5" VerticalAlignment="Top" Width="200" BorderBrush="#FFEFA52E" Grid.Row="1" Opacity="1" BorderThickness="1" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" FontSize="20" Background="#26EFA52E" />
        <Button FontFamily="Segoe WP"  Click="button3_Click" Content="Museum" Foreground="#FFEFA52E" Grid.Row="1" Height="164" HorizontalAlignment="Center" Margin="224,23,56,0" Name="button3" VerticalAlignment="Top" Width="200" BorderBrush="#FFEFA52E" BorderThickness="1" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" FontSize="20" Background="#26EFA52E" />
        <Button FontFamily="Segoe WP"  Content="Hotels" Foreground="#FFEFA52E" Grid.Row="1" Height="164" HorizontalAlignment="Center" Margin="225,167,55,0" Name="button4" VerticalAlignment="Top" Width="200" Click="button4_Click" BorderBrush="#FFEFA52E" BorderThickness="1" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" FontSize="20" Opacity="1" Background="#26EFA52E"></Button>
        <Button FontFamily="Segoe WP"  Content="Traveling" Foreground="#FFEFA52E" Grid.Row="1" Height="164" HorizontalAlignment="Center" Margin="46,310,234,0" Name="button9" VerticalAlignment="Top" Width="200" Click="button9_Click" BorderBrush="#FFEFA52E" BorderThickness="1" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" FontSize="20" Background="#26EFA52E" />
        <Button FontFamily="Segoe WP"  Click="button7_Click" Content="Climate" Foreground="#FFEFA52E" Grid.Row="1" Height="164" HorizontalAlignment="Center" Margin="46,167,234,0" Name="button7" VerticalAlignment="Top" Width="200" BorderBrush="#FFEFA52E" BorderThickness="1" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" FontSize="20" Background="#26EFA52E" />
        <Button FontFamily="Segoe WP"  Click="button8_Click" Content="Help" Foreground="#FFEFA52E" Grid.Row="1" Height="164" HorizontalAlignment="Center" Margin="225,310,55,0" Name="button8" VerticalAlignment="Top" Width="200" BorderBrush="#FFEFA52E" BorderThickness="1" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" FontSize="20" Background="#26EFA52E" />
        <TextBlock Height="51" HorizontalAlignment="Left" Margin="24,130,0,0" Name="textBlock1" Foreground="#FF6A1F18" Text="city attractions" VerticalAlignment="Top" Width="314" Grid.RowSpan="2" FontSize="28" FontWeight="Bold" />
    </Grid>
